[alias]
	boc = reset HEAD~
	pullu = pull upstream
	pullf = !git fetch --all && git reset --hard "origin/$(git branch | grep \\* | cut -d ' ' -f2)"
	wipsave = !git add -A && git commit -m "wip" && git push
	wipload = !git pull && git boc && git push -f

